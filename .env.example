# Database - Supabase PostgreSQL
# Get this from Supabase: Settings -> Database -> Connection string (URI)
DATABASE_URL="postgresql://user:password@db.xxxxx.supabase.co:5432/postgres?schema=public"

# Redis - Upstash Redis for caching and sessions
# Get these from Upstash: Database -> REST API section
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# NextAuth - Authentication configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# Discord OAuth - Get from Discord Developer Portal
# Create app at: https://discord.com/developers/applications
# Add redirect: http://localhost:3000/api/auth/callback/discord
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"
